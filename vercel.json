{
  "version": 2,
  "builds": [
    {
      "src": "server/dist/server.js",
      "use": "@vercel/node"
    },

    {
      "src": "client/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [{ "src": "/(.*)", "dest": "server/dist/server.js" }],
  "build": {
    "env": {
      "NODE_ENV": "production"
    },
    "build": "npm run build",
    "postbuild": "npm run start"
  }
}
